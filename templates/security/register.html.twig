{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<section class="page-section">
    <div class="container">
        {{ form_start(form) }}
        <form>
            <h1 class="text-info text-lg-left font-weight-lighter" style="font-family: 'Calibri'">Register</h1>
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.firstname, 'Your firstname', {label_attr: {'class': 'form-control'}} ) }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.lastname, 'Your lastname', {label_attr: {'class': 'form-control'}} ) }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.email, 'Your Email', {label_attr: {'class': 'form-control'}} ) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.password.first, 'Your password', {label_attr: {'class': 'form-control'}} ) }}
                    {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                    {{ form_label(form.password.second, 'Repeat your password', {label_attr: {'class': 'form-control'}} ) }}
                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </form>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
