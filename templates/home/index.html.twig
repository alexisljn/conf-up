{% extends 'base.html.twig' %}

{% block title %}Conf'UP{% endblock %}

{% block body %}
<section class="page-section">
    <div class="container">
        <h1 class="text-info text-lg-left font-weight-lighter" style="font-family: 'Calibri'">Conferences</h1>
        {% for conference in conferences %}
        <h2><a href="{{ path('conference_vote', {'id':conference.conference.id}) }}">{{ conference.conference.name }}</a></h2>
        <p>{{ conference.conference.description }}</p>
        <p>Note: {{ conference.average }}</p>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(conferences) }}
    </div>
    </div>
</section>
{% endblock %}
