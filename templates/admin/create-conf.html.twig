{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<section class="page-section">
    <div class="container">
        <h1 class="text-info text-lg-left font-weight-lighter" style="font-family: 'Calibri'">Add a conference</h1>
    {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_label(form.name, 'Name of conference') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_label(form.description, 'Short description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group float-left">
            {{ form_row(form.submit)}}
        </div>
    {{ form_end(form) }}
    </div>
</section>
{% endblock %}
